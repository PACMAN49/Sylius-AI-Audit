<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**" />
    </imports>

    <services>
        <service id="PlanetRide\SyliusAiAuditPlugin\Controller\Admin\AiAuditController" autowire="true" autoconfigure="true" public="true" />
        <service id="PlanetRide\SyliusAiAuditPlugin\Controller\Admin\AiAuditSettingsController" autowire="true" autoconfigure="true" public="true" />
        <service id="planetride_sylius_ai_audit.menu.admin_listener" class="PlanetRide\SyliusAiAuditPlugin\Menu\AdminMenuListener">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="addMenuItems" />
        </service>

        <service id="planetride_sylius_ai_audit.settings_provider" class="PlanetRide\SyliusAiAuditPlugin\Settings\AiAuditSettingsProvider" public="true" autowire="true" autoconfigure="true" />
        <service id="PlanetRide\SyliusAiAuditPlugin\Settings\AiAuditSettingsProvider" alias="planetride_sylius_ai_audit.settings_provider" public="true" />

        <service id="PlanetRide\SyliusAiAuditPlugin\Settings\AiAuditPromptVariables" autowire="true" autoconfigure="true" public="true" />
        <service id="PlanetRide\SyliusAiAuditPlugin\Settings\AiAuditPromptRenderer" autowire="true" autoconfigure="true" public="true" />
        <service id="PlanetRide\SyliusAiAuditPlugin\Settings\AiAuditPromptValidator" autowire="true" autoconfigure="true" public="true" />

        <!-- Put your services here -->
    </services>
</container>
